.fan-container {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.fan-head-img {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #eee;
}

.fan-info-box {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex-grow: 1;
}

.fan-info-name {
  font-size: 16px;
  color: #333333;
}

.fan-money-box {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.fan-info-count {
  font-size: 16px;
  color: #333333;
}

.fan-info-money {
  font-size: 16px;
  color: red;
  margin-left: 20rpx;
}

.fan-state-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fan-day {
  font-size: 14px;
  align-self: flex-end;
}

.fan-btn {
  font-size: 13px;
  align-self: flex-end;
  margin-top: 20rpx;
}

.fan-badge-box {
  position: relative;
}

.fan-badge {
  position:absolute;
  left: 2rpx;
  top: 10rpx;
}

