@import "../template/fanMySayTemp/index.wxss";
@import "../template/fanOtherSayTemp/index.wxss";

.chat-container {
  background-color: #fefefe;
  width:100%;
  display: flex;
  flex-direction: column;
}

.top-box {
  display: flex;
  flex-direction: row;
  background-color: #e3e3e3;
  padding: 20rpx 30rpx;
  align-items: center;
}

.chat-img {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #fff;
}

.mid-box{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.right-box {
  display: flex;
  flex-direction: column;
  text-align: right;
}

.chat-text {
  font-size: 14px;
  margin-bottom: 8rpx;
  color: #666;
}

.bottom-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #eee;
  padding: 20rpx 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f3f3f3;
}

.chat-input {
  font-size: 15px;
  max-height: 200rpx;
  border: 1px solid #e3e3e3;
  border-radius: 5rpx;
  background-color: #fff;
  padding:10rpx;
}

.chat-btn {
  font-size: 14px;
  margin-left: 20rpx;
  width: 150rpx;
}
